extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        

        //- Interpolation used to add the project title
        h1=project.project_name
        //- Interpolation used to  add the project description
        p=project.description
      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in project.technologies
          
            li=technology
          

        //-href values to the links live demo and github repo
        a.btn-link(href=project.live_link) Live Demo
        a.btn-link(href=project.github_link) GitHub Repo

    .project-img-box.box
     each image in project.image_urls
      //- Source to add profile picture
      img.project-img(src=image, alt='project picture')
     

    nav.nav
      a(href='/')
        span &larr;
        |  Back
